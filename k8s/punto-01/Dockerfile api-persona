#### CREACION DEL JAR ####
FROM maven:3.6-jdk-8-alpine AS builder

WORKDIR /app
COPY ./pom.xml .
RUN mvn -e -B dependency:go-offline
COPY ./src ./src
RUN mvn -e -B -D maven.test.skip=true install


